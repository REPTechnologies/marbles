@font-face {
  font-family: 'hero';
  src: url(<%= font_url 'hero-webfont.eot' %>);
  src: url(<%= font_url 'hero-webfont.eot?#iefix' %>) format('embedded-opentype'),
    url(<%= font_url 'hero-webfont.woff' %>) format('woff'),
    url(<%= font_url 'hero-webfont.ttf' %>) format('truetype'),
    url(<%= font_url 'hero-webfont.svg#hero' %>) format('svg');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'hero';
  src: url(<%= font_url 'hero_light-webfont.eot' %>);
  src: url(<%= font_url 'hero_light-webfont.eot?#iefix' %>) format('embedded-opentype'),
      url(<%= font_url 'hero_light-webfont.woff' %>) format('woff'),
      url(<%= font_url 'hero_light-webfont.ttf' %>) format('truetype'),
      url(<%= font_url 'hero_light-webfont.svg#herolight' %>) format('svg');
  font-weight: lighter;
  font-style: normal;
}
