<h1>Listing packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th>Trial</th>
      <th>Negotiated</th>
      <th>Renew at</th>
      <th>User selectable</th>
      <th>Billing schedule</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.cost %></td>
        <td><%= package.trial %></td>
        <td><%= package.negotiated %></td>
        <td><%= package.renew_at %></td>
        <td><%= package.user_selectable %></td>
        <td><%= package.billing_schedule %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

